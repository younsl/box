{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "RotatePublicElasticIP",
            "Effect": "Allow",
            "Action": [
                "ec2:AllocateAddress",
                "ec2:AssociateAddress",
                "ec2:DescribeAddresses",
                "ec2:ReleaseAddress",
                "ec2:DescribeInstances"
            ],
            "Resource": "*"
        },
        {
            "Sid": "GetCallerIdentity",
            "Effect": "Allow",
            "Action": [
                "sts:GetCallerIdentity"
            ],
            "Resource": "*"
        }
    ]
}